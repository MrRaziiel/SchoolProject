<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")

</head>
<body>
    <nav class="navbar navbar-expand-sm navbar-toggleable-sm bg-primary">

        <div class="container">
            <nav class="navbar navbar-expand-sm navbar-toggleable-sm ">
                <a class="navbar-brand" style="color:white" href="@Url.Action("Index", "Home", new { area = "" })">
                    <svg width="30" height="30" viewBox="0 0 200 200" xmlns="http://www.w3.org/2000/svg">
                        <circle cx="100" cy="100" r="90" fill="#0072ff" />
                        <text x="100" y="115" text-anchor="middle" font-family="Arial" font-size="90" fill="#ffffff">$</text>
                        <rect x="50" y="130" width="20" height="50" fill="#ffffff" />
                        <rect x="90" y="100" width="20" height="80" fill="#ffffff" />
                        <rect x="130" y="70" width="20" height="110" fill="#ffffff" />
                    </svg>
      
                        MR_RAZIEL

                </a>
            </nav>
           

            <div class="collapse navbar-collapse d-sm-inline-flex justify-content-between">
                <ul class="navbar-nav flex-grow-1 text-black">
                    <li>@Html.ActionLink("CONTACTS", "Contact", "Home", new { area = "" }, new { @class = "nav-link" })</li>
                    <li class="nav-item dropdown">
                        <a class="nav-link dropdown-toggle" href="#" role="button" data-bs-toggle="dropdown" aria-expanded="true">
                            CLIENT
                        </a>
                        <ul class="dropdown-menu">
                            <li>@Html.ActionLink("Client Detail", "List_of_clients", "Clients", new { area = "" }, new { @class = "dropdown-item" })</li>
                        </ul>
                    </li>

                    <li class="nav-item dropdown">
                        <a class="nav-link dropdown-toggle" href="#" role="button" data-bs-toggle="dropdown" aria-expanded="true">
                            ADMIN
                        </a>
                        <ul class="dropdown-menu">
                            <il>@Html.ActionLink("All Clients", "List_of_clients", "Clients", new { area = "" }, new { @class = "dropdown-item" })</il>
                            <il>@Html.ActionLink("New Client", "Add_Client", "Clients", new { area = "" }, new { @class = "dropdown-item" })</il>
                        </ul>
                    </li>

                </ul>

                <div>
                    <button>@Html.ActionLink("SignUp", "AddClient", "Clientes", new { area = "" }, new { @class = "nav-link" })</button>
                </div>
            </div>
        </div>
    </nav>
    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - My ASP.NET Application</p>

        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
    @RenderSection("deleteClient", required: false)
    @RenderSection("HidePassword", required: false)
    @RenderSection("PreviewImage", required: false)


</body>


</html>
<style>
    .navbar-nav {
        list-style-type: none;
        padding: 0;
        margin: 0;
        display: flex;
    }

    .nav-item {
        margin: 0 1px;
    }

    .nav-link {
        text-decoration: none;
        color: white; /* Set text color to black */
        font-size: 20px; /* Adjust as needed */
    }

        .nav-link:hover {
            color: darkgray; /* Optional: change color on hover */
        }

    .navbar-brand {
        display: flex;
        align-items: center;
    }

        .navbar-brand svg {
            margin-right: 8px;
        }
</style>